{
  "name": "git-oracle",
  "displayName": "Git Oracle",
  "author": "alBz <albertobarrago@gmail.com>",
  "description": "ðŸ”® Enhanced Git integration for VS Code with powerful history visualization, blame tracking, interactive cherry-picking, and branch management. Simplify your Git workflow with magical features!",
  "version": "0.0.1",
  "publisher": "alBz",
  "license": "MIT",
  "icon": "images/icon.png",
  "readme": "README.md",
  "galleryBanner": {
    "color": "#2C2C54",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AlbertoBarrago/git-oracle"
  },
  "keywords": [
    "git",
    "source control",
    "blame",
    "history",
    "cherry-pick",
    "branch management"
  ],
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onView:gitOracleLog",
    "onView:gitOracleCherryPick",
    "onView:gitOracleBranches",
    "onCommand:git-oracle.showLog",
    "onCommand:git-oracle.cherryPick",
    "onCommand:git-oracle.showBranches",
    "onCommand:git-oracle.refreshView"
  ],
  "contributes": {
    "commands": [
      {
        "command": "git-oracle.showLog",
        "title": "Git Oracle: Show Log"
      },
      {
        "command": "git-oracle.cherryPick",
        "title": "Git Oracle: Cherry Pick"
      },
      {
        "command": "git-oracle.showBranches",
        "title": "Git Oracle: Show Branches"
      },
      {
        "command": "git-oracle.refreshView",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "git-oracle.refreshView",
          "when": "view == gitOracleBranches || view == gitOracleLog || view == gitOracleCherryPick",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "git-oracle",
          "title": "Git Oracle",
          "icon": "images/icon.png"
        }
      ]
    },
    "views": {
      "git-oracle": [
        {
          "type": "webview",
          "id": "gitOracleLog",
          "name": "Log"
        },
        {
          "type": "webview",
          "id": "gitOracleCherryPick",
          "name": "Cherry Pick"
        },
        {
          "type": "webview",
          "id": "gitOracleBranches",
          "name": "Branches"
        }
      ]
    },
    "iconThemes": [
      {
        "id": "git-oracle-icons",
        "label": "Git Oracle Icons",
        "path": "./theme/fileicons.json"
      }
    ],
    "configuration": {
      "title": "Git Oracle",
      "properties": {
        "gitOracle.gitPath": {
          "type": "string",
          "default": "git",
          "description": "Path to the Git executable"
        },
        "gitOracle.maxCommitHistory": {
          "type": "number",
          "default": 100,
          "description": "Maximum number of commits to display in history view"
        },
        "gitOracle.showRelativeDates": {
          "type": "boolean",
          "default": true,
          "description": "Show dates in relative format (e.g., '2 days ago') instead of absolute format"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "@vscode/vsce": "^3.2.2",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
